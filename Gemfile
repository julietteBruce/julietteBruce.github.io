source 'https://rubygems.org'

gem "jekyll"

group :jekyll_plugins do
    gem "jekyll-feed"
    gem "jekyll-github-metadata"
    gem "jekyll-mentions"
    gem "jekyll-seo-tag"
    gem "jekyll-sitemap"
end

# Keep Logger available when Ruby's stdlib gems are removed in future
gem "logger"

# For Faraday v2+ retry middleware compatibility
gem "faraday-retry"